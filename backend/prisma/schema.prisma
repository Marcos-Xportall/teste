// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  STARTER
  PRO
  SCALE
}

enum ProjectStatus {
  DRAFT
  GENERATING
  READY
  DEPLOYED
  FAILED
}

enum DeploymentStatus {
  PENDING
  DEPLOYING
  SUCCESS
  FAILED
}

enum TransactionType {
  CREDIT_PURCHASE
  CREDIT_USAGE
  SUBSCRIPTION
  REFUND
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  plan      Plan     @default(STARTER)
  credits   Int      @default(100)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects     Project[]
  transactions Transaction[]

  @@index([email])
}

model Project {
  id          String        @id @default(uuid())
  name        String
  description String
  status      ProjectStatus @default(DRAFT)
  prompt      String?
  code        Json?
  userId      String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  deployments Deployment[]

  @@index([userId])
  @@index([status])
}

model Deployment {
  id         String           @id @default(uuid())
  projectId  String
  url        String?
  status     DeploymentStatus @default(PENDING)
  provider   String           @default("vercel")
  deploymentId String?
  error      String?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([status])
}

model Transaction {
  id          String          @id @default(uuid())
  userId      String
  type        TransactionType
  amount      Float
  credits     Int?
  description String?
  stripeId    String?
  createdAt   DateTime        @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
}
